
@{
    ViewBag.Title = "index";
    Layout = "~/Areas/Panel/Views/Shared/_AdminLayout.cshtml";
}
<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js"></script>
<script src="~/Areas/Panel/angularjs/category.js?v=@DateTime.Now.ToString("ddMMyyyyHHmmss")"></script>
<script src="//angular-ui.github.io/bootstrap/ui-bootstrap-tpls-1.2.5.js"></script>
<div class="main-content" ng-controller="categoryController">
    <div class="main-content-inner">
        <div class="page-content">

            <div class="page-header">
                <h1>
                    Kategori İşlemleri
                </h1>
            </div><!-- /.page-header -->
            <div id="loader" style="width:220px; height:220px" >
                <img src="~/Areas/Panel/PanelContent/tenor.gif" alt="Loading..." />
            </div>
            <div class="row">
                <div class="col-xs-4">
                    <form class="form-horizontal" role="form">

                        <div class="form-group">
                            <div class="col-md-12">
                                <input type="text" id="Title" placeholder="Kategori Adı" name="Title" class="col-md-12" />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-12">
                                <input type="button" class="btn btn-success" ng-click="alert()" autocomplete="off" value="Kaydet" style="float:right" />
                            </div>
                        </div>
                    </form>


                </div>
                <div class="col-xs-8">
                    <!-- PAGE CONTENT BEGINS -->
                    <div class="row">
                        <div class="col-xs-12">
                            <table id="simple-table" class="table  table-bordered table-hover">
                                <thead>
                                    <tr>

                                        <th style="width:300px">Kategori Adı</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <tr ng-repeat="cat in categories">
                                        <td>{{cat.CategoryName}}</td>

                                        <td>
                                            <div class="hidden-sm hidden-xs btn-group">
                                                <a ng-click="categoryDetail(cat.Id)" class="btn btn-xs btn-success">
                                                    <i class="ace-icon fa fa-check bigger-120"></i>
                                                </a>
                                                <button ng-click="categoryDelete(cat.Id)" class="btn btn-xs btn-danger">
                                                    <i class="ace-icon fa fa-trash-o bigger-120"></i>
                                                </button>
                                            </div>
                                            <div class="hidden-md hidden-lg">
                                                <div class="inline pos-rel">
                                                    <button class="btn btn-minier btn-primary dropdown-toggle" data-toggle="dropdown" data-position="auto">
                                                        <i class="ace-icon fa fa-cog icon-only bigger-110"></i>
                                                    </button>
                                                    <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">
                                                        <li>
                                                            <a ng-click="categoryDetail()" class="tooltip-info" data-rel="tooltip" title="Detay Gör">
                                                                <span class="blue">
                                                                    <i class="ace-icon fa fa-search-plus bigger-120"></i>
                                                                </span>
                                                            </a>
                                                        </li>

                                                        <li>
                                                            <a ng-click="categoryDelete(cat.Id)" href="#" class="tooltip-error" data-rel="tooltip" title="Sil">
                                                                <span class="red">
                                                                    <i class="ace-icon fa fa-trash-o bigger-120"></i>
                                                                </span>
                                                            </a>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </td>

                                    </tr>

                                </tbody>

                            </table>

                        </div><!-- /.span -->
                    </div><!-- /.row -->
                    <!-- PAGE CONTENT ENDS -->
                </div><!-- /.col -->
            </div><!-- /.row -->
            <!-- /.row -->
        </div>
    </div>
</div>
